@model List<Plantilla>
<h1> Plantilla base de datos repository </h1>


<form method="post">
    <label> Introduzca funcion</label>
    <input type="text" name="funcion" class="form-control" />
    <button class="btn btn-info">
        Buscar por Funcion
    </button>
</form>

<table class="table table-dark">
    <thead>
        <tr>
            <th>ID</th>
            <th>Apellido</th>
            <th>Funcion</th>
            <th>Salario</th>
            <th>Detalles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Plantilla plant in Model)
        {
                <tr>
                    <td>@plant.IdPlantilla</td>
                    <td>@plant.Apellido</td>
                    <td>@plant.Funcion</td>
                    <td>@plant.Salario</td>
                    <td><a asp-controller="Plantilla" asp-action="Details" asp-route-idplantilla="@plant.IdPlantilla"> Ver más</a></td>
                </tr>
        }
    </tbody>
</table>